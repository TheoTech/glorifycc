extends layout

block content
    .col-md-4.col-md-offset-4
        h1 Log In
        if hasErrors
            .alert.alert-danger
                each message in messages
                    p #{message}
        form(role="form" method="post", action="/user/login")
            .form-group
                label(for="usernameOrEmail") Username
                input#username.form-control(name="usernameOrEmail" type="text" placeholder="Username or Email")
            .form-group
                label(for="password") Password
                input#password.form-control(name="password", type="password" placeholder="Password")
            p
              a(href='/user/forgot') Forgot password?
            button.btn.btn-success(type="submit") Log In
        p Don't have an account? <a href='/user/signup'>Sign up</a>
