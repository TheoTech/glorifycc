extends layout

block content
    include topnav
    h1 Preview
    //Note: songs2d = [{songs: [Song Schema that the user checked]}, {minLine: the smallest lyric line}]    
    each songsObj in songs2d
        -var i = 0
        -var j = 0
        -while (i < songsObj.songs.length && j < songsObj.songs.length)
            table.table(style='text-align: center; page-break-after: always')
                thead
                    th(style='text-align: center') #{songsObj.songs[i].title}
                    -i++
                    - while(i % 3 !== 0 && i < songsObj.songs.length)
                        th(style='text-align: center') #{songsObj.songs[i].title}
                        -i++
                tbody
                    tr
                        td
                            -for(var x = 0; x < songsObj.minLine; x++)
                                - if (songsObj.songs[j].lyric[x] === '')
                                    br
                                - else
                                    !{songsObj.songs[j].lyric[x]}
                                    br
                        -j++
                        -while(j % 3 !== 0 && j < songsObj.songs.length)            
                            td
                                -for(var x = 0; x < songsObj.minLine; x++)
                                    - if (songsObj.songs[j].lyric[x] === '')
                                        br
                                    - else
                                        !{songsObj.songs[j].lyric[x]}
                                        br
                            -j++

    <a class="btn btn-default btn-lg" href="export3?type=pdf" role="button" aria-haspopup="true" aria-expanded="false">
    <span class="glyphicon glyphicon-download" aria-hidden="true"></span> Export to PDF </button>

    <a class="btn btn-danger btn-lg" href="export3?type=pptx" role="button" aria-haspopup="true" aria-expanded="false">
    <span class="glyphicon glyphicon-download" aria-hidden="true"></span> Export to pptx </button>
