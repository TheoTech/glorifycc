extends layout

block content
    include topnav
    form(method='POST')
        legend Resend Verification Link
        if messages.error
            .alert.alert-danger
                div= messages.error
        if messages.success
            .alert.alert-success
                div= messages.success
        .form-group
            label(for='email') Email
            input.form-control(type='text', name='email', autofocus)
        button.btn.btn-primary(type='submit') Resend
