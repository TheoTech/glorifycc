extends layout

block content
    include topnav
    h1 Step 2: Select the Format to Export
    .row
        .col-md-6
            h3 One Language on a slide
                .panel.panel-default(onclick="window.location.href='/user/playlist/#{playlistName}/export3'")
                    .panel-body
                        p Hello
                        p Greetings
                        p Salutations
        .col-md-6    
            h3 Multiple Languages on a slide
                .panel.panel-default(data-toggle="modal" data-target="#arranging-modal")
                    .panel-body
                        p Hello
                        p 你好
                        p Holla

    #arranging-modal.modal.fade(role="dialog")
        .modal-dialog
            .modal-content
                .modal-header(style="padding: 35px 50px")
                    button.close(type="button" data-dismiss="modal") &times;
                    h4 Put the languages in order on the slide
                .modal-body(style="padding: 40px 50px")
                    p Select Translations to add
                    
                    button.btn.btn-success(type="submit") Done
