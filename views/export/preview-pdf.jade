extends ../layout

block content
    include ../topnav
    h1 Preview
    #exportOption
    //Note: songs2d = [[Song Schema that the user checked]]
    each songs in songs2d
        -var i = 0
        -var j = 0
        -while (i < songs.length && j < songs.length)
            table.table(style='text-align: center; page-break-after: always')
                thead
                    th(style='text-align: center') #{songs[i].title}
                    -i++
                    - while(i % 3 !== 0 && i < songs.length)
                        th(style='text-align: center') #{songs[i].title}
                        -i++
                tbody
                    -for(var index = 0; index < songs[0].lyric.length; index++)
                        tr
                            td
                                -for(var x = 0; x < songs[j].lyric[index].length; x++)
                                    !{songs[j].lyric[index][x]}
                                    br
                                br
                            -j++
                            -while(j % 3 !== 0 && j < songs.length)            
                                td
                                    -for(var x = 0; x < songs[j].lyric[index].length; x++)
                                        !{songs[j].lyric[index][x]}
                                        br
                                -j++
                            -j = 0
                            
    include exportButton
    
    script(src='/dist/javascripts/exportOption.js')
    script.
        m.mount(document.getElementById('exportOption'), exportOption(0))
