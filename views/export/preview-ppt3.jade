extends ../layout

block content
    include ../topnav
    h1 Preview
    #exportOption
    include exportButton
    hr(style='height:2px; background-color:#000000;')
    //Note: songs2d = [[Song Schema that the user checked]]
    each songs in songs2d
        h1
            each song in songs
                span #{song.title}
            span .pptx    
        div(style='font-size: 12px; text-align: center; height: 330px; width: 500px; margin: auto; background-color: black; display: table')
            div(style='display: table-cell; vertical-align: middle')       
                each song in songs
                    -console.log('hehehe')
                    p #{song.lyric[0][0]}
        br
        hr(style='height:2px; background-color:#000000;')       
    include exportButton

    script.
        var maxNumberOfSongs = !{JSON.stringify(maxNumberOfSongs).replace(/<\//g, "<\\/")}
    script(src='/dist/javascripts/exportOption.js')
    script.
        m.mount(document.getElementById('exportOption'), exportOption(3, maxNumberOfSongs))
