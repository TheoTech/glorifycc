extends layout

block content
    .col-md-4.col-md-offset-4
        h1 Sign Up
        if messages
            .alert(class='#{info}')
                each msg in messages
                    p #{msg.msg}
                if resend
                    p
                        a(href='/user/signup/resend') Resend Verification Link
        form(role="form" method="post", action="/user/signup")
            .form-group
                label(for="username") Username
                input#username.form-control(name="username" type="text" placeholder="Username")
            .form-group
                label(for="email") Email
                input#email.form-control(name="email" type="email" placeholder="Email")
            .form-group
                label(for="password") Password
                input#password.form-control(name="password", type="password" placeholder="Password")
            .form-group
                label(for="password2") Confirm Password
                input#password.form-control(name="password2", type="password" placeholder="Password")
            button.btn.btn-primary(type="submit") Sign Up
