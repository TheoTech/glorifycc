          glorifyApp.initDiscover({
            songs: songs,
            currentInLibrary: currentInLibrary,
            playlists: playlists,
            isLoggedIn: isLoggedIn,
            langsExist: langsExist,
            selectedPlaylistId: selectedPlaylistId
          });
