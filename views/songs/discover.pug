doctype html
html
    head
        include ../headContent
    body
        //this var is to omit the searchbox on topbar
        -var withoutSearchbox = true;
        include ../importJS
        include ../header
        .container-fluid
            h1 Discover Songs
            p.lead Find Public Domain and CC0 Worship Songs in Many Languages
            #discoverBox
            include ../partials/googleads

            #songlistTable

        script.
            var songs = !{JSON.stringify(songs).replace(/<\//g, "<\\/")}
