extends layout

block content
    include topnav
    - var langCapitalized = song.lang.charAt(0).toUpperCase() + song.lang.slice(1)
    .row
        .col-md-6
            h1 Original Song
            #original
        .col-md-6
            h1(style='display:inline-block') Translation
            button.btn.btn-default.pull-right(style='display:inline-block; margin-top: 25px' data-toggle='modal' data-target='#copypaste') Copy/Paste Lyric
            #translation

    script.
        var song = !{JSON.stringify(song).replace(/<\//g, "<\\/")}
    script(src='/dist/javascripts/songForm.js')
    script.
        var translationObject = {title: '', author: '', year: '', lang: 'english', copyright: 'CC0', lyric: []}
        for (var i = 0; i < song.lyric.length; i++) {
            translationObject.lyric.push([''])
        }
        m.mount(document.getElementById('original'), songForm(song, '', true, false).songFormComponent)
        m.mount(document.getElementById('translation'), songForm(translationObject, 'add', false, true).songFormComponent)
